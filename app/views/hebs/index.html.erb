

<div class="d-flex flex-row">

    <div class="list-heb mb-5">

        <h1 class="mt-5 mb-5">Trouver un hébergement</h1>

            <div class="d-flex flex-row">
                <%= form_tag hebs_path, method: :get, class: "searchbar form-inline search-form-control" do %>
                  <%= text_field_tag :query,
                    params[:query],
                    class: "td form-control",
                    placeholder: "Chercher un hébergement par nom, catégorie, adresse..."%>
                <% end %>
            <!-- <img class="building" src="<%#= image_path('building.svg') %>"/> -->

          </div>

          <% @hebs.each do |heb| %>

                <div class="cards d-flex flex-row justify-content-between">

                  <div class="d-flex flex-column">
                    <h2><%= heb.name.capitalize %></h2>
                    <p><%= heb.address %></p>
                  </div>

                    <%= link_to "2 places", heb_path(heb), class: "btn btn-foyer" %>

                </div>

          <% end %>
    </div>


